@{
    Layout = "_Layout_Start_Survey";
}
<div class="row justify-content-center">
    <div class="col-lg-8 col-md-8 d-flex flex-column align-items-center justify-content-center">
        <div class="card mb-2">
            <div class="card-body" style="border-top: 8px solid #0d6efd; border-radius:8px">
                <h5 class="card-title">Basic Detail</h5>

                <!-- Vertical Form -->
                <form class="row g-3">
                    <div class="col-6">
                        <label for="txtFirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="txtFirstName">
                    </div>
                    <div class="col-6">
                        <label for="txtLastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="txtLastName">
                    </div>
                    <div class="col-6">
                        <label for="txtEmailId" class="form-label">Email Id</label>
                        <input type="email" class="form-control" id="txtEmailId">
                    </div>
                    <div class="col-6">
                        <label for="txtMobileNumber" class="form-label">Mobile Number <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" id="txtMobileNumber">
                    </div>
                    <div class="col-6">
                        <label for="txtAge" class="form-label">Age <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" id="txtAge">
                    </div>
                    <div class="col-6">
                        <label for="ddlGender" class="form-label">Gender <span class="text-danger">*</span></label>
                        <select class="form-control" id="ddlGender">
                            <option value=""> --Select-- </option>
                            <option value="1">Male</option>
                            <option value="2">Female</option>
                            <option value="3">Trangender</option>
                            <option value="4">Not to say</option>
                        </select>
                    </div>
                    <div class="text-center">
                        <button type="button" id="btnStartSurvey" class="btn btn-primary">Start Survey</button>
                        @* <button type="reset" class="btn btn-secondary">Reset</button> *@
                    </div>
                </form><!-- Vertical Form -->

            </div>
        </div>


    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#btnStartSurvey").click(function () {
                if ($("#txtFirstName").val() == '' || $("#txtFirstName").val() === undefined) {
                    $("#txtFirstName").css('border-color', '#dc3545');
                    return false;
                }
                else
                    $("#txtFirstName").css('border-color', '#dee2e6');
                    
                if ($("#txtLastName").val() == '' || $("#txtLastName").val() === undefined) {
                    $("#txtLastName").css('border-color', '#dc3545');
                    return false;
                }
                else
                    $("#txtLastName").css('border-color', '#dee2e6');
                // if ($("#txtEmailId").val() == '' || $("#txtEmailId").val() === undefined) {
                //     $("#txtEmailId").css('border-color', '#dc3545');
                //     return false;
                // }
                // else
                //     $("#txtEmailId").css('border-color', '#dee2e6');
                if ($("#txtMobileNumber").val() == '' || $("#txtMobileNumber").val() === undefined) {
                    $("#txtMobileNumber").css('border-color', '#dc3545');
                    return false;
                }
                else
                    $("#txtMobileNumber").css('border-color', '#dee2e6');
                if ($("#txtAge").val() == '' || $("#txtAge").val() === undefined) {
                    $("#txtAge").css('border-color', '#dc3545');
                    return false;
                }
                else
                    $("#txtAge").css('border-color', '#dee2e6');
                if ($("#ddlGender").val() == '' || $("#ddlGender").val() === undefined) {
                    $("#ddlGender").css('border-color', '#dc3545');
                    return false;
                }
                else
                    $("#ddlGender").css('border-color', '#dee2e6');
                var customerDetail = {
                    "FirstName": $("#txtFirstName").val(),
                    "LastName": $("#txtLastName").val(),
                    "EmailId": $("#txtEmailId").val(),
                    "MobileNumber": $("#txtMobileNumber").val(),
                    "Age": $("#txtAge").val(),
                    "Gender": $("#ddlGender").val()
                };
               
                $.ajax({
                    method: "POST",
                    url: "/Survey/StartSurvey",
                    data: { "customerDetail": customerDetail },
                    dataType: "json",
                    // contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        
                    },
                    complete: function (error) {

                    },
                    error: function () {

                    }
                })
            });           
        })
    </script>
}